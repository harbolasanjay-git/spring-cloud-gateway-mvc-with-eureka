eureka:
  client:
    register-with-eureka: true
    fetch-registry: true
    service-url:
      defaultZone: http://localhost:8761/eureka/
    healthcheck:
      enabled: true
  instance:
    hostname: localhost
server:
  port: 8080
spring:
  application:
    name: api-gateway  # âœ… This name will be used in Eureka
  cloud:
    gateway:
      mvc:
        routes:
          - id: USER-SERVICE
            uri: lb://ORDER-SERVICE
            predicates:
              - Path=/orders/**
          - id: order-service
            uri: lb://USER-SERVICE
            predicates:
              - Path=/users/**
    discovery:
      enabled: true